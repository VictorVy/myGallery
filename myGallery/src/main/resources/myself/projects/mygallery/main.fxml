<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myself.projects.mygallery.MainController">
   <top>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#btnAdd" text="Add" />
            <Button mnemonicParsing="false" onAction="#btnRemove" text="Remove" />
            <Pane HBox.hgrow="ALWAYS" />
            <MenuButton fx:id="sortMenuBtn" contentDisplay="TEXT_ONLY" mnemonicParsing="false" text="Sort By">
               <items>
                  <RadioMenuItem fx:id="aDateSort" mnemonicParsing="false" onAction="#sortToggle" selected="true" text="Recently Added">
                     <toggleGroup>
                        <ToggleGroup fx:id="sortToggleGroup" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem fx:id="nameSort" mnemonicParsing="false" onAction="#sortToggle" text="Name" toggleGroup="$sortToggleGroup" />
                  <RadioMenuItem fx:id="typeSort" mnemonicParsing="false" onAction="#sortToggle" text="Type" toggleGroup="$sortToggleGroup" />
                  <RadioMenuItem fx:id="cDateSort" mnemonicParsing="false" onAction="#sortToggle" text="Creation Date" toggleGroup="$sortToggleGroup" />
               </items>
            </MenuButton>
            <MenuButton fx:id="sortDirBtn" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" maxHeight="24.0" minHeight="0.0" mnemonicParsing="false">
              <items>
                  <RadioMenuItem fx:id="ascSortDir" mnemonicParsing="false" onAction="#sortDirToggle" selected="true" text="Ascending">
                     <toggleGroup>
                        <ToggleGroup fx:id="sortDirToggleGroup" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem mnemonicParsing="false" onAction="#sortDirToggle" text="Descending" toggleGroup="$sortDirToggleGroup" />
              </items>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </MenuButton>
            <Button mnemonicParsing="false" onAction="#btnClear" text="Clear Selected" />
            <Button mnemonicParsing="false" onAction="#btnRefresh" text="Refresh" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <center>
      <TabPane fx:id="tabPane" onDragDropped="#dragDropView" onDragOver="#dragOverView" side="BOTTOM" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
         <tabs>
            <Tab fx:id="galleryTab" closable="false" onSelectionChanged="#updateView" text="Gallery">
               <content>
                  <ScrollPane fx:id="galleryScroll" hbarPolicy="NEVER" prefHeight="10.0" prefViewportHeight="296.0" prefViewportWidth="560.0" prefWidth="500.0">
                     <content>
                        <FlowPane fx:id="galleryView" focusTraversable="true" hgap="20.0" minHeight="10.0" minWidth="10.0" onMouseClicked="#galleryViewClicked" prefWrapLength="${galleryScroll.width}" vgap="20.0"> <!--prefHeight="${galleryScroll.height}"-->
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </FlowPane>
                     </content>
                  </ScrollPane>
               </content></Tab>
            <Tab fx:id="detailsTab" closable="false" onSelectionChanged="#updateView" text="Details">
               <content>
                  <TableView fx:id="detailsView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="10.0" minWidth="10.0" tableMenuButtonVisible="true">
                     <columns>
                        <TableColumn fx:id="nameColumn" maxWidth="1000.0" prefWidth="100.0" sortable="false" text="Name" />
                        <TableColumn fx:id="typeColumn" editable="false" maxWidth="1000.0" prefWidth="75.0" sortable="false" text="Type" />
                        <TableColumn fx:id="pathColumn" editable="false" maxWidth="1000.0" prefWidth="175.0" sortable="false" text="Path" />
                        <TableColumn fx:id="cDateColumn" editable="false" maxWidth="1000.0" prefWidth="125.0" sortable="false" text="Creation Date" />
                        <TableColumn fx:id="aDateColumn" editable="false" maxWidth="1000.0" prefWidth="125.0" sortable="false" text="Date Added" visible="false" />
                     </columns>
                  </TableView>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
