<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myself.projects.mygallery.ViewWindowController">
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="imageView" disable="true" pickOnBounds="true" preserveRatio="true" visible="false">
               <viewport>
                  <Rectangle2D />
               </viewport></ImageView>
            <MediaView fx:id="mediaView" disable="true" visible="false">
               <viewport>
                  <Rectangle2D />
               </viewport></MediaView>
            <BorderPane fx:id="overlay">
               <bottom>
                  <VBox fx:id="controls" alignment="CENTER" disable="true" visible="false" BorderPane.alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER" VBox.vgrow="NEVER">
                           <children>
                              <Button fx:id="btnPlay" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false" onAction="#btnPlay" textAlignment="CENTER">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </bottom>
            </BorderPane>
         </children>
      </StackPane>
   </center>
</BorderPane>
